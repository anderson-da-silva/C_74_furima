<%= form_for @item do |f| %>
  商品名<%= f.text_field :name %><br>
  商品説明<%= f.text_field :item_explanation%>
  発送元地域
  <%= f.select :shipping_area, Item.shipping_areas.keys, {}, {class: 'Item'}%>
  価格<%= f.number_field :price %><br>
  <div id="image-box">
    <div id="previews">
      <% if @item.persisted? %>
        <% @item.item_imgs.each_with_index do |image, i| %>
          <%= image_tag image.image.url, data: { index: i }, width: "100", height: '100' %>
        <% end %>
      <% end %>
    </div>
    <%= f.fields_for :item_imgs do |image| %>
      <div data-index="<%= image.index %>" class="js-file_group">
        <%= image.file_field :image, class: 'js-file' %><br>
        <span class="js-remove">削除</span>
      </div>
      <% if @item.persisted? %>
        <%= image.check_box :_destroy, data:{ index: image.index }, class: 'hidden-destroy' %>
      <% end %>
    <% end %>
    <% if @item.persisted? %>
      <div data-index="<%= @item.item_imgs.count %>" class="js-file_group">
        <%= file_field_tag :image, name: "item[item_imgs_attributes][#{@item.item_imgs.count}][image]", class: 'js-file' %>
        <div class="js-remove">削除</div>
      </div>
    <% end %>
  </div>
  <%= f.submit %>
<% end %>