<div class="content">
  <p><%= item.name %></p>
  <p><%= item.item_explanation%>
  <p><%= item.shipping_area%>
  <p><%= item.price %>円</p>
  <% item.item_imgs.each do |image| %>
    <%= image_tag image.image.url %>
    <%= link_to '編集', edit_item_path(item) %>
    <%= link_to '削除', item_path(item), method: :delete %>
  <% end %>
</div>