.container
  .container__box
    .container__box__up--contents
      = link_to image_tag("/assets/mako_image.png", width: "100%", height: "100%")
    .container__box__down--contents
      .category
        .category__parent
          - @parents.each do |parent|
            = link_to parent.name, { anchor: parent.id }

      .category--title
        .category-title__parents
          - @parents.each do |parent|
            -# parent.idをidに指定していいのか？
            .category--title__parents__parent{ id: parent.id } 
              = link_to parent.name, category_path(parent), class: "parentLink"

            .category--title__childs
              - parent.children.each do |child|
                .category--title__childs__child
                  = link_to child.name, category_path(child), class: "childLink"
                
                  .category--title__childs__child__glandchilds
                    - child.children.each do |grandchild|
                      .category--title__childs__child__glandchilds__glandchild
                        = link_to grandchild.name, category_path(grandchild), class: "grandchildreLink"
            
              .upBottom
                = link_to categories_path, class: "up_btn" do
                  %i.fa.fa-arrow-up 
                  ページトップへ
